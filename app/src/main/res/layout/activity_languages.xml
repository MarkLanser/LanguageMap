<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" android:weightSum="1">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="1dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="49dp" android:id="@+id/textView3" android:textSize="18sp"
            android:textAlignment="center" android:lineSpacingExtra="12sp" tools:text="@string/languages"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:fillViewport="false">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <CheckBox
                    android:text="CheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="43dp" android:id="@+id/checkBox21"
                    android:textSize="24sp"
                    android:layout_marginLeft="16dp"/>
            <CheckBox
                    android:text="CheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="43dp" android:id="@+id/checkBox23"
                    android:textSize="24sp"
                    android:layout_marginLeft="16dp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
